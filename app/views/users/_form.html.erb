<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :fname %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :lname %>
  </div>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div class="form-group">
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div >
    <%= form.label :admin, style: "display: block" %><%= form.check_box :admin %>
  </div>

  <div class="form-group">
    <%= form.label :address_id, style: "display: block" %>
    <%= collection_select( :user, :address_id, Address.order(:street), :id, :street) %>
  </div>

<br/>
  <div>
    <%= form.submit %>
  </div>
<% end %>
